{
  "builds": [
    {
      "src": "react_app/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "^/$",
      "dest": "/react_app/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/react_app/$1"
    }
  ]
}