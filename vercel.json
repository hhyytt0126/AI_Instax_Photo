{
  "builds": [
    {
      "src": "api/*.js",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18.x"
      }
    },
    {
      "src": "react_app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "react_app/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "react_app/build/index.html"
    }
  ]
}